<Window
    x:Class="VoiceToClipboard.CursorOverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    AllowsTransparency="True"
    WindowStyle="None"
    Background="Transparent"
    Topmost="True"
    ShowInTaskbar="False"
    IsHitTestVisible="False"
    Width="48"
    Height="48"
    ResizeMode="NoResize">

    <Grid x:Name="Container" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <ScaleTransform x:Name="ContainerScale" ScaleX="1" ScaleY="1"/>
        </Grid.RenderTransform>

        <!-- Recording dot (red, pulsating) -->
        <Ellipse x:Name="Dot"
                 Width="22" Height="22"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 RenderTransformOrigin="0.5,0.5"
                 Visibility="Collapsed">
            <Ellipse.RenderTransform>
                <ScaleTransform x:Name="DotScale" ScaleX="1" ScaleY="1"/>
            </Ellipse.RenderTransform>
            <Ellipse.Effect>
                <DropShadowEffect x:Name="DotGlow" ShadowDepth="0" BlurRadius="6" Color="#EF4444" Opacity="0.5"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Transcribing pen icon (amber) -->
        <TextBlock x:Name="PenIcon"
                   Text="&#xE70F;"
                   FontFamily="Segoe MDL2 Assets"
                   FontSize="18"
                   Foreground="#F59E0B"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   RenderTransformOrigin="0.5,0.5"
                   Visibility="Collapsed">
            <TextBlock.RenderTransform>
                <ScaleTransform x:Name="PenScale" ScaleX="1" ScaleY="1"/>
            </TextBlock.RenderTransform>
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#F59E0B" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Done checkmark (green) -->
        <TextBlock x:Name="Checkmark"
                   Text="âœ“"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#22C55E"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   RenderTransformOrigin="0.5,0.5"
                   Visibility="Collapsed">
            <TextBlock.RenderTransform>
                <ScaleTransform x:Name="CheckScale" ScaleX="1" ScaleY="1"/>
            </TextBlock.RenderTransform>
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#22C55E" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
